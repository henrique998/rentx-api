generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Category {
  id String @id @default(uuid())

  name        String @unique
  description String

  created_at DateTime @default(now())

  @@map("categories")
}

model Specification {
  id String @id @default(uuid())

  name        String @unique
  description String

  created_at DateTime @default(now())

  @@map("specifications")
}
